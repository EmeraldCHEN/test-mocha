{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "es2020",
    "target": "es2021",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node", "@types/mocha", "@types/chai"],
    "paths": {
      "@config/*": ["./config/*"],
      "@constant/*": ["./constants/*"],
      "@service/*": ["./services/*"]
    }
  },
  "exclude": ["node_modules", "./.github", "./.vscode", "./artifacts"]
}
